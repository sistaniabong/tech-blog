<div class="col">
    <h3>Update Post</h3>

    <form class="form update-post-form" data-id="{{post.id}}">
        <div class="form-group">
        <label for="post-title">Title</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value='{{post.title}}'/>
        </div>
        <div class="form-group">
        <label for="post-content">Content</label>
        <textarea class="form-input" id="post-content" name="post-content">{{post.content}}</textarea>
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
</div>

<script src="/js/updatepost.js"></script>